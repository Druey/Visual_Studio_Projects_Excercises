<UserControl x:Class="IfuControl.MaterialComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IfuControl"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">

    <ComboBox xmlns:sys="clr-namespace:System;assembly=mscorlib" 
          Name="Research"           
          IsEditable="True"   
          Selector.IsSelected="True" 
          SelectionChanged="Research_SelectedItem"      
          IsDropDownOpen="False" StaysOpenOnEdit="True"   IsTextSearchEnabled="False" TextBoxBase.TextChanged="Research_TextChanged"  VerticalAlignment="Stretch"   >
        
        <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">

                        <TextBlock Text="{Binding Name}" />

                        <TextBlock Text="{Binding classification_Value.ClassValue}" />

                    </StackPanel>
                </DataTemplate>

            </ComboBox.ItemTemplate>



        </ComboBox>
    
</UserControl>
