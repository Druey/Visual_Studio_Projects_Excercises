<Window x:Class="Ifu_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ifu_Project"
        xmlns:control = "clr-namespace:IfuControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="525">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <control:ExchangeGrid Grid.Row="0" />
        <control:QueryCommand Grid.Row="1"/>
    </Grid>
</Window>
